{
  "name": "@kitiumai/database",
  "version": "1.0.0",
  "description": "Enterprise-ready database package with Prisma ORM supporting PostgreSQL and MongoDB",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "prisma",
    "scripts"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "migration:create": "prisma migrate dev --create-only",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^6.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "database",
    "orm",
    "prisma",
    "postgresql",
    "mongodb",
    "enterprise"
  ],
  "author": "Kitium AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitiumai/database.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
