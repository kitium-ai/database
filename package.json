{
  "name": "@kitiumai/database",
  "version": "2.0.0",
  "description": "TypeScript database toolkit for PostgreSQL (Prisma) and MongoDB with pooling, migrations, seeding, health checks, retries, and observability.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./mongo": {
      "import": {
        "types": "./dist/mongo.d.ts",
        "default": "./dist/mongo.js"
      },
      "require": {
        "types": "./dist/mongo.d.cts",
        "default": "./dist/mongo.cjs"
      }
    },
    "./pooling": {
      "import": {
        "types": "./dist/pooling.d.ts",
        "default": "./dist/pooling.js"
      },
      "require": {
        "types": "./dist/pooling.d.cts",
        "default": "./dist/pooling.cjs"
      }
    },
    "./observability": {
      "import": {
        "types": "./dist/observability.d.ts",
        "default": "./dist/observability.js"
      },
      "require": {
        "types": "./dist/observability.d.cts",
        "default": "./dist/observability.cjs"
      }
    },
    "./migrations": {
      "import": {
        "types": "./dist/migrations.d.ts",
        "default": "./dist/migrations.js"
      },
      "require": {
        "types": "./dist/migrations.d.cts",
        "default": "./dist/migrations.cjs"
      }
    },
    "./seed": {
      "import": {
        "types": "./dist/seed.d.ts",
        "default": "./dist/seed.js"
      },
      "require": {
        "types": "./dist/seed.d.cts",
        "default": "./dist/seed.cjs"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      },
      "require": {
        "types": "./dist/types.d.cts",
        "default": "./dist/types.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "prisma/**/*",
    "scripts/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts src/mongo.ts src/pooling.ts src/observability.ts src/migrations.ts src/seed.ts src/types.ts --format cjs,esm --sourcemap --dts --clean --target es2020 --platform node",
    "dev": "tsup src/index.ts src/client.ts src/mongo.ts src/pooling.ts src/observability.ts src/migrations.ts src/seed.ts src/types.ts --format cjs,esm --sourcemap --dts --watch",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "migration:create": "prisma migrate dev --create-only",
    "lint": "eslint \"src\" --ext .ts,.tsx",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch",
    "type-check": "tsc -p tsconfig.typecheck.json --noEmit",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "lint:fix": "eslint \"src\" --ext .ts,.tsx --fix",
    "lint:all": "node --input-type=module -e \"import { lintAll } from '@kitiumai/scripts/lint'; await lintAll(false);\"",
    "test:coverage": "node --input-type=module -e \"import { runTestsCoverage } from '@kitiumai/scripts/test'; await runTestsCoverage();\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "security:audit": "node --input-type=module -e \"import { auditDependencies } from '@kitiumai/scripts/security'; const summary = await auditDependencies({ severityThreshold: 'moderate' }); if ((summary.severityCounts?.critical || 0) + (summary.severityCounts?.high || 0) + (summary.severityCounts?.moderate || 0) > 0) { console.log(JSON.stringify(summary, null, 2)); process.exit(1); } console.log('No blocking vulnerabilities');\"",
    "security:secrets": "node --input-type=module -e \"import { scanSecrets } from '@kitiumai/scripts/security'; const result = await scanSecrets({ configPath: '.gitleaks.toml', failOnFinding: true }); if (result.findings?.length) { console.error(JSON.stringify(result.findings, null, 2)); process.exit(1); } console.log('No secrets detected');\"",
    "ci:verify": "pnpm run lint:all && pnpm run test:coverage && pnpm run typecheck",
    "changeset": "ensure-changeset && changeset",
    "version": "ensure-changeset && changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@kitiumai/error": "^3.0.0",
    "@kitiumai/logger": "^3.0.1",
    "@kitiumai/types": "^3.0.0",
    "@kitiumai/utils-ts": "^3.0.0",
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.0.0",
    "mongodb": "^6.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@kitiumai/config": "^3.1.4",
    "@kitiumai/lint": "^3.0.1",
    "@kitiumai/scripts": "^2.0.0",
    "@kitiumai/vitest-helpers": "^3.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "prisma": "^6.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "database",
    "orm",
    "prisma",
    "prisma-orm",
    "prisma-client",
    "postgresql",
    "postgres",
    "pg",
    "mongodb",
    "mongo",
    "mongodb-driver",
    "multi-database",
    "sql",
    "nosql",
    "data-access",
    "data-layer",
    "connection-pooling",
    "pgbouncer",
    "migrations",
    "schema-management",
    "seed",
    "transaction",
    "health-check",
    "retry",
    "resilience",
    "observability",
    "metrics",
    "tracing",
    "typescript",
    "nodejs",
    "backend",
    "microservices",
    "cloud-native",
    "serverless",
    "enterprise-ready",
    "kitium",
    "kitiumai",
    "clean-architecture",
    "hexagonal-architecture",
    "domain-driven-design",
    "repository-pattern",
    "data-mapper",
    "dal",
    "tree-shakable",
    "sdk"
  ],
  "author": "Kitium AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/database.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/database/issues"
  },
  "homepage": "https://github.com/kitium-ai/database#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
